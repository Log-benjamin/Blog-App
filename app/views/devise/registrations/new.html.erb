<style>
body
{
  background-color:#6abadeba;
  font-family: 'Arial';
}
.card {
  width: 100%;
  overflow: hidden;
  margin: auto;
  padding: 3rem;
  padding-top: 1rem;
  background: #23463F;
  border-radius: 15px ;
}
h2 {
  color: white;
}
label {
  color: white;
  font-size: 1.4rem;
  margin-bottom: 0.5rem;
}
input {
  margin-bottom: 0.5rem;
}
.form-check-label {
  font-size: 1rem;
}
.btn-primary {
  width: 15rem;
  height: 3rem;
  border: none;
  font-size: 1.5rem;
  border-radius: 17px;
  padding-left: 7px;
  color: black;
}
</style>
<div class="container-fluid">
  <div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Sign up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :bio %>
              <%= f.text_field :bio, autofocus: true, autocomplete: "bio", placeholder: "Bio", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "******", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "******", class: "form-control" %>
            </div>
            <div class="text-center" style="margin-top: 20px;">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
