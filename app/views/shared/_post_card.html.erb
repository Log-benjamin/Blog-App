<div class="post">
  <div class="post-title">
    <a href="<%= user_post_path(@user, post) %>" id="user_post_<%= post.id %>">
      <h3><%= post.title %></h3>
    </a>
  </div>
  <div class="post-info">
      <p><%= post.text %></p>
      <% if can? :destroy, post %>
        <%= button_to "Delete", user_post_path(post.author_id, post.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      <% end %>
      <div class="pull-right">
        <span>Comments: <%= post.commentsCounter %></span>,
        <span>Likes: <%= post.likesCounter %></span>
      </div>
  </div>
</div>